{
    "name": "Hi9",
    "description": "Hi9 - Organise Everything",
    "version": "1.0.5",
    "incognito": "split",
    "chrome_url_overrides": { "newtab": "redirect.html" },
    "manifest_version": 2,
    "permissions": ["identity", "identity.email", "tabs", "idle", "activeTab", "https://*/","http://*/", "bookmarks", "storage"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "page":"hi9.html"
    },
    "content_scripts": [
      {
        "matches": ["https://hi9.uk/*"],
        "css": ["ext.css"]
      },
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }

    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}
